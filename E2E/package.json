{
  "name": "e2e",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:api:docker": "docker compose -f ../ModularMonolith/LocalHosting/docker-compose.yml -f ../ModularMonolith/LocalHosting/docker-compose.override.yml up -d",
    "stop:api:docker": "docker compose -f ../ModularMonolith/LocalHosting/docker-compose.yml -f ../ModularMonolith/LocalHosting/docker-compose.override.yml down",
    "start:api:aspire": "dotnet run --project ../ModularMonolith/LocalHosting/Host.Aspire/Host.Aspire.csproj",
    "start:ui": "cd ../UI && npm run dev",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.1",
    "concurrently": "^9.2.1",
    "start-server-and-test": "^2.1.2"
  }
}
