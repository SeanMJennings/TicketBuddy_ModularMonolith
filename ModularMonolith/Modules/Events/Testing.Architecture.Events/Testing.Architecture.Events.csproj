<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.14.1" />
        <PackageReference Include="NetArchTest.Rules" Version="1.3.2" />
        <PackageReference Include="NUnit3TestAdapter" Version="5.0.0" />
        <PackageReference Include="FluentAssertions" Version="8.5.0" />
        <PackageReference Include="NUnit" Version="4.3.2" />
        <PackageReference Include="Testing.Bdd" Version="1.0.4" />
    </ItemGroup>

    <ItemGroup>
        <Using Include="NUnit.Framework"/>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Domain\Domain.steps.cs">
        <DependentUpon>Domain.specs.cs</DependentUpon>
      </Compile>
      <Compile Update="Modules\Module.steps.cs">
        <DependentUpon>Module.specs.cs</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Application.Events\Application.Events.csproj" />
      <ProjectReference Include="..\Controllers.Events\Controllers.Events.csproj" />
      <ProjectReference Include="..\Domain.Events\Domain.Events.csproj" />
      <ProjectReference Include="..\Infrastructure.Events\Infrastructure.Events.csproj" />
    </ItemGroup>

</Project>
